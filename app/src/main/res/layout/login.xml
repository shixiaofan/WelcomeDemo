<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_page_color"
    tools:context="com.example.administrator.welcomedemo.Login">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/one"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/lv"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f2eded">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="账号："/>
            <EditText
                android:id="@+id/login_name"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:background="#d9d5d5"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="密码："/>
            <EditText
                android:id="@+id/login_pass"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/login_page_button"
        android:layout_below="@+id/lv"
        android:text="登陆"
        android:textSize="23sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>
<TextView
    android:id="@+id/login_register"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="还没有账号，点击注册！"
    android:layout_marginBottom="37dp"
    android:textColor="#2b73ae"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"/>

</RelativeLayout>
